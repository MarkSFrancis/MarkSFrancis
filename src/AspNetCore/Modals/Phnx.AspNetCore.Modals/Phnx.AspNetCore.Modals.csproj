<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Version>1.1.0-beta</Version>
    <Description>Helpers for managing, creating and presenting modal dialogs (designed for dependacy injection)</Description>
    <PackageLicenseUrl>https://github.com/org-phnx/Phnx/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/org-phnx/Phnx</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/org-phnx/phnx/master/qrcode-link-to-github.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/org-phnx/Phnx</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>org-phnx</Copyright>
    <Company>org-phnx</Company>
    <Authors>org-phnx</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netcoreapp2.0\Phnx.AspNet.Core.Modals.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Html.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Runtime" Version="2.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Phnx.AspNetCore">
      <HintPath>..\..\AspNetCore\Phnx.AspNetCore\bin\Debug\netcoreapp2.0\Phnx.AspNetCore.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
