<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Version>1.0.0</Version>
    <Description>Provides helpers for managing, creating and presenting modal dialogs and messages for ASP.NET Core applications</Description>
    <PackageLicenseUrl>https://github.com/phoenix-apps/Phnx/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/phoenix-apps/Phnx</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/phoenix-apps/phnx/master/qrcode-link-to-github.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/phoenix-apps/Phnx</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>Phoenix Apps Ltd</Copyright>
    <Company>Phoenix Apps Ltd</Company>
    <Authors>Phoenix Apps Ltd</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netcoreapp2.0\Phnx.AspNet.Core.Modals.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Html.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Runtime" Version="2.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Session" Version="2.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Phnx.Serialization">
      <HintPath>..\..\..\Serialization\Phnx.Serialization\bin\Debug\netstandard2.0\Phnx.Serialization.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
