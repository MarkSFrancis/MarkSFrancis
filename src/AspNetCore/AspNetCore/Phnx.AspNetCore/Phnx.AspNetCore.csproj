<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <PackageProjectUrl>https://github.com/org-phnx/Phnx</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/org-phnx/Phnx/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/org-phnx/Phnx</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Copyright>org-phnx</Copyright>
    <Company>org-phnx</Company>
    <Authors>org-phnx</Authors>
    <PackageIconUrl>https://raw.githubusercontent.com/org-phnx/phnx/master/qrcode-link-to-github.png</PackageIconUrl>
    <Description>Provides helpers for request and response meta (such as cookies and headers), session helpers, HTML encoding helpers and more for ASP.NET Core</Description>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netcoreapp2.0\Phnx.AspNet.Core.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Html.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" Version="2.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Phnx">
      <HintPath>..\..\..\Phnx\Phnx\bin\Debug\netstandard2.0\Phnx.dll</HintPath>
    </Reference>
    <Reference Include="Phnx.Collections">
      <HintPath>..\..\..\Collections\Phnx.Collections\bin\Debug\netstandard2.0\Phnx.Collections.dll</HintPath>
    </Reference>
    <Reference Include="Phnx.Serialization">
      <HintPath>..\..\..\Serialization\Phnx.Serialization\bin\Debug\netstandard2.0\Phnx.Serialization.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
