<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Description>Provides ways to easily serialize to JSON, XML and Binary, as well as deep and shallow object clones</Description>
    <Copyright>Phoenix Apps Ltd</Copyright>
    <Company>Phoenix Apps Ltd</Company>
    <Authors>Phoenix Apps Ltd</Authors>
    <PackageLicenseUrl>https://github.com/phoenix-apps/Phnx/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/phoenix-apps/Phnx</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/phoenix-apps/phnx/master/qrcode-link-to-github.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/phoenix-apps/Phnx</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\Phnx.Serialization.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Phnx.Collections">
      <HintPath>..\..\Collections\Phnx.Collections\bin\Debug\netstandard2.0\Phnx.Collections.dll</HintPath>
    </Reference>
    <Reference Include="Phnx.IO">
      <HintPath>..\..\IO\IO\Phnx.IO\bin\Debug\netstandard2.0\Phnx.IO.dll</HintPath>
    </Reference>
    <Reference Include="Phnx.IO.Json">
      <HintPath>..\..\IO\Json\Phnx.IO.Json\bin\Debug\netstandard2.0\Phnx.IO.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
